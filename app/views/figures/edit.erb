<h1>Create a Figure</h1>

<form action="/figures/<%= @figure.id %>" method="post">
    <input id="hidden" type="hidden" name="_method" value="patch">
    <p>Name: <input type="text" name="figure[name]" id="figure_name" value="<%=@figure.name%>"></p><br />
  
    <p>Select a title</p>
    <%Title.all.each do |title|%>
        <input type="checkbox" name="figure[title_ids][]" value="<%=title.id%>" <%='checked' if @figure.titles.include?(title)%> id="title_<%=title.id%>"><%=title.name%></input>
    <%end%>
    <br />
      
    <p>Or Create a New One: </p><input type="text" name="title[name]" id="new_title">    
    
    <p>Select a landmark</p>
    <%Landmark.all.each do |landmark|%>
        <input type="checkbox" name="figure[landmark_ids][]" value="<%=landmark.id%>" <%='checked' if @figure.landmarks.include?(landmark)%> id="landmark_<%=landmark.id%>"><%=landmark.name%></input>
    <%end%>
    <br />
      
    <p>Or Create a New One: </p><input type="text" name="landmark[name]" id="new_landmark">  
    <input type="submit" value="Edit Figure">
</form>